{
    "compilerOptions": {
      "module": "commonjs",
      "target": "ES2022",
      "moduleResolution": "node",
      "outDir": "./dist",
      "baseUrl": ".",
      "removeComments": true,
      "allowSyntheticDefaultImports": true,
      "incremental": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "strictNullChecks": true,
      "sourceMap": true,
      "lib": ["ES2022", "DOM"],
      "skipLibCheck": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  